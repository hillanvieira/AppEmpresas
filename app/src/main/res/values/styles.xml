<resources>

    <style name="Widget.Theme.IoasysEmpresas.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.IoasysEmpresas.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="TextStyle2">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">79dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyle3">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/charcoal_grey</item>
    </style>
    <style name="TextStyle8">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/dark_indigo</item>
    </style>
    <style name="TextStyle6">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/warm_grey</item>
    </style>
    <style name="TextStyle7">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/warm_grey</item>
    </style>
    <style name="TextStyle">
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">17dp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/warm_grey</item>
    </style>
    <style name="TextStyle4">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/gill_sans_semibold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>